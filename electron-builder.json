{
  "appId": "com.snappycam.videoeditor",
  "productName": "Snappy Cam Video Editor",
  "directories": {
    "output": "dist-electron"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "!electron/bridge/**/*"
  ],
  "extraFiles": [
    {
      "from": "electron/bridge",
      "to": "bridge",
      "filter": ["**/*"]
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "public/favicon.ico",
    "publisherName": "Snappy Cam",
    "verifyUpdateCodeSignature": false
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "installerIcon": "public/favicon.ico",
    "uninstallerIcon": "public/favicon.ico",
    "installerHeaderIcon": "public/favicon.ico"
  },
  "publish": {
    "provider": "github",
    "owner": "your-username",
    "repo": "snappy-cam-zoom-magic"
  }
}